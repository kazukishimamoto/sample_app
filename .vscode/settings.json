{
  // 基本的な言語機能のサポート
  "ruby.useLanguageServer": true,
  // Formatで使用するツールを`bundle exec`で実行するかどうか
  "ruby.useBundler": true,
  "ruby.lint": {
    "rubocop": {
      "useBundler": true // enable rubocop via bundler
    }
  },
  // `Format Document`で使用するフォーマッターにrubocopを指定
  "ruby.format": "rubocop",
  "solargraph.useBundler": true
}
